extends layout

block content
  nav.navbar
    .navbar-container
      .logo
        a(href="/")
          img(src="/data/uploads/vanessa.jpg", alt="Vanessa")
      
      .menu
        //- a(href="/") Home
        a(href="/kitchen/create") Add Recipe
        a(href="/recipes/bookmarks") Bookmarked
        a(href="/recipes/groceryList") Grocery List
  .main-section 
   
    form.formGroup(action="/kitchen/search", method="GET")
      input(type="text", name="search", placeholder="Search for recipes")
      button(type="submit") Search
  .notification
  link(rel="stylesheet", href="/stylesheets/recipes.css")
  
  script(src="/js/scripts.js")
  .recipe-page
    .cardContainer
      each recipe in recipes
        .cardContainer__body(data-aos="fade-up")
          .cardImage_box 
            img.cardImage(src=recipe.image, alt=recipe.title)
          .cardContent_box
            p.cardContent_box__title= recipe.title
          .cardBtn 
            a.cardBtn__link(href=recipe.url)
              i.fas.fa-eye.icon-view
              |  Recipe
            a.cardBtn__link.bookmark(href="#", data-id=recipe._id)
              i.fas.fa-bookmark.icon-bookmark
            a.cardBtn__link.delete(href="#", data-id=recipe._id)
              i.fas.fa-trash(style="color: black;")

  // Delete Confirmation Modal
  .modal#deleteModal
    .modal-content
      span.modal-header Confirm Deletion
      p.moda-text Are you sure you want to delete this recipe?
      button.btn.btn-danger#confirmDelete Yes, Delete
      button.btn.btn-secondary#cancelDelete Cancel

