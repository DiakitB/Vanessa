extends layout 


block content
 
  div.card8-container
    div.card8
      div.card8-image
        img(src=`/data/uploads/${recipe.image}` alt="")
      div.card8-content
        h1= recipe.title
        p= recipe.description
        h3 Ingredients
        ul
          each ingredient, index in recipe.ingredients
            li  #{ingredient.unit} #{ingredient.ingredient}
        h3 Instructions
        ol
          each instruction, index in recipe.instructions
            li #{index + 1}. #{instruction}
      div.card8-actions
        a(href='/kitchen/all-recipes' class='interact') Back to Recipes
        a(href=`/kitchen/cart/${recipe._id}` class='interact') Bookmark Recipe
      style.
        .card8-container {
          display: flex;
          justify-content: center;
          align-items: center;
          padding: 20px;
        }

        .card8 {
          background: #fff;
          border-radius: 10px;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
          overflow: hidden;
          max-width: 600px;
          width: 100%;
          margin: 20px;
        }

        .card8-image img {
          width: 100%;
          height: auto;
          display: block;
        }

        .card8-content {
          padding: 20px;
        }

        .card8-content h1 {
          font-size: 24px;
          margin-bottom: 10px;
        }

        .card8-content p {
          font-size: 16px;
          color: #666;
          margin-bottom: 20px;
        }

        .card8-content h3 {
          font-size: 20px;
          margin-bottom: 10px;
        }

        .card8-content ul, .card8-content ol {
          padding-left: 20px;
          margin-bottom: 20px;
        }

        .card8-content li {
          margin-bottom: 5px;
        }

        .card8-actions {
          display: flex;
          justify-content: space-between;
          padding: 20px;
          border-top: 1px solid #eee;
        }

        .card8-actions .interact {
          text-decoration: none;
          color: #007BFF;
          font-weight: bold;
        }

        .card8-actions .interact:hover {
          text-decoration: underline;
        }
        @media (max-width: 768px) {
          .card8-container {
            background-color: red ;
          }

          .card8{
            display: grid;
            grid-template-columns: 1fr;
          }
        }


