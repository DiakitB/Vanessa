extends layout 

block content

  div.card8-container
    div.card8
      div.card8-image
        img(src=recipe.image, alt=recipe.title)
      div.card8-actions
        a(href='/kitchen/all-recipes' class='interact')
          i.fas.fa-arrow-left
          |  Back to Recipes
        a(href='/kitchen/cart/#{recipe._id}' class='interact' id='bookmark-link')
          i.fas.fa-bookmark
          |  Bookmark Recipe
        a(href='/kitchen/recipes/#{recipe._id}/edit' class='interact' id='edit-link')
          i.fas.fa-edit
          |  Edit Recipe
      div.card8-content
        h1= recipe.title
        p= recipe.description
        h3 Ingredients
        ul
          each ingredient, index in recipe.ingredients
            li #{ingredient.unit} #{ingredient.ingredient}
        h3 Instructions
        ul
          each instruction, index in recipe.instructions
            li #{index + 1}. #{instruction}

  div.message(id='bookmark-message') Recipe bookmarked successfully!
  div.message.error(id='already-bookmarked-message') Recipe is already bookmarked!

  link(rel='stylesheet', href='/stylesheets/show.css')
  script(src='/js/show.js')