extends layout
block content
  link(rel="stylesheet", href="/stylesheets/index.css")
  link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
  script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
  script(src="/js/index.js")
  .intro
    p.animated(data-aos="fade-up") Welcome Vanessa  to your app!
    p.animated(data-aos="fade-up" data-aos-delay="500") Organize your files, plan your trips, and discover new recipes.
  .landing-page
    .container.recipes(data-aos="fade-up" data-aos-delay="2000")
      a.card(href="/kitchen/all-recipes")
        .card-content
          .card-icon
            i.fas.fa-utensils
          .card-title RECIPES
          .card-description Discover new recipes
    .container.files(data-aos="fade-up" data-aos-delay="1000")
      a.card(href="/file/subfiles")
        .card-content
          .card-icon
            i.fas.fa-folder
          .card-title FILES
          .card-description Organize your files
    .container.travel(data-aos="fade-up" data-aos-delay="1500")
      a.card(href="/travel/items")
        .card-content
          .card-icon
            i.fas.fa-plane
          .card-title TRAVEL
          .card-description Plan your trips