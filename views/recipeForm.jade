extends layout

block content 
  h1 Add a New Recipe
  form(method='post' enctype='multipart/form-data')
    div.form-group
      label(for='title') Recipe Title:
      input(type='text' name='title' id='title' required)
    div.form-group
      label(for='image') Recipe Image:
      input(type='file' name='image' id='image' required)
    div.form-group
      label Instructions:
      div#instruction
        div.instruction
          input(type='text' name='instructions[]' placeholder='Instruction' required)
    div.form-group
      button(type='button' id='add-instruction') Add Instruction

    div.form-group
      label(for='servings') Recipe Serving:
      input(type='number' name='servings' id='servings' required)
    div.form-group
      label Ingredients:
      div#ingredients
        div.ingredient
          input(type='text' name='ingredients[]' placeholder='Ingredient' required)
          input(type='text' name='units[]' placeholder='Unit' required)
    div.form-group
      button(type='button' id='add-ingredient') Add Ingredient

    div.form-group
      button(type='submit') Submit

    div.form-group.goback-btn
      a(href='/kitchen/all-recipes') Go Back
  script(src='/js/recipeform.js')
  link(rel='stylesheet' href='/stylesheets/recipeform.css')
