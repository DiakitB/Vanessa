extends layout 

block content
   header 
    .container 
      .nav-bar 
        .logo 
          a(href="/") LOGO
        nav
          ul 
            li: a(href="/kitchen/recipes") Recipes
            li: a(href="/kitchen/create") Create
            li: a(href="/kitchen/recipes") Recipes
            li: a(href="/kitchen/recipes") Rec
  .container
    .row
      each recipe in recipes
  
        .col-md-4
          .card(style="width: 18rem;")
            .image-container 
              img.card-img-top(src=`/data/uploads/${recipe.image}` alt="Card image cap")
            .card-body
              h5.card-title #{recipe.title}
              h6.card-subtitle.mb-2.text-muted Card subtitle
              p.card-text #{recipe.instructions}.
              a.btn(href=`/kitchen/recipe/${recipe._id}`)  View Recipe
                
