extends layout 

block content
  link(rel="stylesheet", href="/stylesheets/bookmark.css")
  div.card8-container
    div.card8
      div.card8-image
        img(src=recipe.image, alt=recipe.title)
      div.card8-content
        h1= recipe.title
        p= recipe.description
        h3 Ingredients
        ul
          each ingredient, index in recipe.ingredients
            li #{ingredient.unit} #{ingredient.ingredient}
        h3 Instructions
        ol
          each instruction, index in recipe.instructions
            li #{index + 1}. #{instruction}
      div.card8-actions
        a(href='/recipes/bookmarks' class='interact')
          i.fas.fa-arrow-left
          |  Back to Recipes
     